/**index.wxss**/
.tab-h {
  position: fixed;
  top: 0; 
  left: 0; 
  z-index: 99;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  background: #F7F7F7; 
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  width: 50%;
  text-align: center;
  color: #afadad;
}
.tab-item.active{
  color: #282c34;
  position: relative;
}
.tab-item.active:after{
   content: "";
   display: block;
   height: 4rpx;
   width: 100%;
   background: #282c34;
   position: absolute; 
   bottom: 0;
   left: 5rpx;
}
.tab-content{
  margin-top: 80rpx;
}
.tab-view {
  height: 100%;
}
