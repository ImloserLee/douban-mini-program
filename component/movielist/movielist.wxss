.movie-list-wrap {
  width: 100%;
}
.movie-list-wrap .movie-list-section {
  display: flex;
  flex-direction: row;
  /* border-bottom: 2rpx solid rgb(238, 236, 236); */
  padding: 20rpx 30rpx;
  height: 300rpx;
  text-align: center;
}
.movie-list-wrap .movie-list-section:last-child{
  border-bottom: none;
}
.movie-list-item {
  font-size: 24rpx;
  text-align: left;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie-list-item:nth-of-type(1) {
  flex: 0 0 30%;
}
.movie-list-item:nth-of-type(2) {
  margin-left: 20rpx;
  flex: 0 0 50%;
}
.movie-list-item:nth-of-type(3) {
  flex: 0 0 20%;
  align-self: center;
}
.movie-list-image {
  width: 100%;
  height: 100%;
}
.movie-title {
  margin-bottom: 16rpx;
  font-size: 36rpx;
}
.movie-rating {
  margin-bottom: 16rpx;
}
.movie-director, .movie-actor {
  margin-bottom: 10rpx;
  color: #9e9e9e;
}
.movie-watcher {
  margin-bottom: 10rpx;
  color: #dd7f8d;
}
.movie-picture-box {
  margin-top: 10rpx;
  width: 80%;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #dd7f8d;
  border: 2rpx solid #dd7f8d;
  border-radius: 10rpx;
}